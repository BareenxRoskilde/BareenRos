<div class="popup-container" id="popup">
    <div class="popup">
        <span class="close-btn" onclick="closePopup()">&times;</span>
        <h2>Vi glæder os til at byde dig ind i Bareen x Roskilde universet. Hold øje med din mail for eksklusiv adgang til den unikke kollektion</h2>
        <img src="Bareenorange.png" alt="logo">
    </div>
</div>



<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Åbner popup-vinduet
    function openPopup() {
      const popup = document.getElementById('popup');
      if (popup) {
        popup.style.display = 'flex';
      }
    }

    // Lukker popup-vinduet
    function closePopup() {
      const popup = document.getElementById('popup');
      if (popup) {
        popup.style.display = 'none';
      }
    }

    // Hent knappen og tilføj eventlistener
    const signUpButton = document.querySelector('.send');
    if (signUpButton) {
      signUpButton.addEventListener('click', openPopup);
    }

    // Tilføj event listener til close button for at lukke popupen
    const closeButton = document.querySelector('.close-btn');
    if (closeButton) {
      closeButton.addEventListener('click', closePopup);
    }
  });
</script>

<style>
  .popup-container {
    display: none;
    position: fixed;
    top: 0;
