---
import SignupForm from "./SignupForm.astro"
---

<div class="popup-container" id="popup">
    <div class="popup">
        <span class="close-btn" onclick="closePopup()">&times;</span>
        <p>Vi glæder os til at byde dig ind i Bareen x Roskilde universet. Hold øje med din mail for eksklusiv adgang til den unikke kollektion</p>
        <img src="bareenorange.png" alt="logo">
    </div>
</div>


<script>
  window.onload = function() {
    // Åbner popup-vinduet
    function openPopup() {
      const popup = document.getElementById('popup');
      if (popup) {
        popup.style.display = 'flex';
      }
    }

    // Lukker popup-vinduet
    function closePopup() {
      const popup = document.getElementById('popup');
      if (popup) {
        popup.style.display = 'none';
      }
    }

    // Hent knappen og tilføj eventlistener
    const signUpButton = document.querySelector('.send');
    if (signUpButton) {
      signUpButton.addEventListener('click', openPopup);
    }
  };
</script>


<style>
.popup-container {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  justify-content: center;
  align-items: center;
  z-index: 1000;
}
.popup {
  background: #010101;
  padding: 55px;
  border-radius: 8px;
  text-align: center;
  position: relative;
  width: 485px;
  z-index: 1001;
}

.popup p {
  color: white;
}
.popup .close-btn {
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 20px;
  cursor: pointer;
  color: white;
}
.popup form {
  display: flex;
  margin-top: 20px;
}
 </style>

       