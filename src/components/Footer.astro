---
// Footer.astro
import { FaFacebook, FaInstagram } from "react-icons/fa";
---

<footer class="footer">
  <div class="footer-inner">
    <div class="footer-logo">
      <img src="footerlogo.png" alt="" />
    </div>

    <div class="footer-section">
      <h3>SHOP</h3>
      <ul>
        <li>Herre</li>
        <li>Dame</li>
        <li>Collab</li>
        <li>Accessories</li>
        <li>Gavekort</li>
        <li>Butik</li>
      </ul>
    </div>

    <div class="footer-section">
      <h3>INFORMATION</h3>
      <ul>
        <li>Vores historie</li>
        <li>Blog</li>
        <li>Kontakt</li>
        <li>Ombyt / Retur</li>
        <li>Handelsbetingelser</li>
        <li>Privatlivspolitik</li>
        <li>Cookiepolitik</li>
      </ul>
    </div>

    <div class="footer-section">
      <h3>KUNDESERVICE</h3>
      <p><strong>Man - Fre:</strong> 9:00 - 16:00</p>
      <p><strong>Weekend & helligdage:</strong> Lukket</p>
      <p><strong>Live chat:</strong> Tilgås via ikon nederst til højre på siden</p>

      <div class="footer-icons">
        <FaInstagram size={20} />
        <FaFacebook size={20} />
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #fff;
    padding: 2rem;
    border-top: 1px solid #eee;
    margin-top: 5rem;
  }

  .footer-inner {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    font-family: "Inter", sans-serif;
  }

  .footer-logo {
    grid-column: span 1;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .logo-symbol {
    font-size: 2rem;
  }

  .footer-section h3 {
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
  }

  .footer-section li {
    margin-bottom: 0.25rem;
    color: #000;
  }

  .footer-icons {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .payment-icons {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .payment-icons img {
    height: 30px;
  }
</style>
